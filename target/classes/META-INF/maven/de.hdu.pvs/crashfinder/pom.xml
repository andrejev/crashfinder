<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.hdu.pvs</groupId>
    <artifactId>crashfinder</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>regressionFaultLocalizer-</name>
    <description>A tool for localizing the software regression errors</description>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>src</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>lib</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>dat</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/crashfinder</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>resources</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>de.hdu.pvs.crashfinder.analysis.SlicerMain</mainClass>
                        </manifest>
                        <manifestEntries>
                            <Class-Path>.</Class-Path>
                        </manifestEntries>
                    </archive>

                    <finalName>crashfinder/crashfinder</finalName>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <artifactId>com.ibm.wala</artifactId>
            <groupId>com.ibm.wala.core</groupId>
            <version>1.3</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/com.ibm.wala.core.jar</systemPath>
        </dependency>
        <dependency>
            <artifactId>com.ibm.wala</artifactId>
            <groupId>com.ibm.wala.shrike</groupId>
            <version>1.3</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/com.ibm.wala.shrike.jar</systemPath>
        </dependency>
        <dependency>
            <artifactId>com.ibm.wala</artifactId>
            <groupId>com.ibm.wala.util</groupId>
            <version>1.3</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/com.ibm.wala.util.jar</systemPath>
        </dependency>

        <dependency>
            <artifactId>com.ibm.wala</artifactId>
            <groupId>com.ibm.wala.core.tests</groupId>
            <version>1.3</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/com.ibm.wala.core.tests.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
        </dependency>
    </dependencies>
</project>